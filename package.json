{
  "name": "iobroker.air-q",
  "version": "1.0.5",
  "description": "Adapter for air-Q devices",
  "author": {
    "name": "Katharina K.",
    "email": "katharina.kraus@air-q.com"
  },
  "homepage": "https://github.com/CorantGmbH/ioBroker.air-q",
  "license": "MIT",
  "keywords": [
    "air-q",
    "airq",
    "air quality",
    "ioBroker",
    "iobroker-adapter",
    "adapter"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/CorantGmbH/ioBroker.air-q.git"
  },
  "engines": {
    "node": ">= 18"
  },
  "dependencies": {
    "@iobroker/adapter-core": "^3.2.3",
    "bonjour-service": "^1.2.1",
    "crypto-js": "^4.2.0"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^3.8.0",
    "@alcalzone/release-script-plugin-iobroker": "^3.7.0",
    "@alcalzone/release-script-plugin-license": "^3.7.0",
    "@alcalzone/release-script-plugin-manual-review": "^3.7.0",
    "@iobroker/adapter-dev": "^1.3.0",
    "@iobroker/testing": "^5.0.3",
    "@tsconfig/node16": "^16.1.3",
    "@types/chai": "^4.3.6",
    "@types/chai-as-promised": "^7.1.8",
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.13.0",
    "@types/proxyquire": "^1.3.31",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^8.22.0",
    "babel-eslint": "^10.1.0",
    "chai": "^4.4.1",
    "chai-as-promised": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin": "^1.0.1",
    "mocha": "^10.7.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^5.0.7",
    "sinon": "^19.0.2",
    "sinon-chai": "^3.7.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "typescript": "~5.4.5"
  },
  "main": "build/main.js",
  "files": [
    "admin{,/!(src)/**}/!(tsconfig|tsconfig.*|.eslintrc).{json,json5}",
    "admin{,/!(src)/**}/*.{html,css,png,svg,jpg,js}",
    "build/",
    "src/**/*.ts",
    "www/",
    "io-package.json",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "build-adapter ts",
    "watch": "build-adapter ts --watch",
    "prebuild:ts": "rimraf build",
    "build:ts": "build-adapter ts",
    "watch:ts": "build-adapter ts --watch",
    "test:ts": "mocha --config test/mocharc.custom.json src/**/*.test.ts",
    "test:package": "mocha test/package --exit",
    "test:integration": "mocha test/integration --exit",
    "test": "npm run test:ts && npm run test:package",
    "check": "tsc --noEmit && tsc --noEmit -p admin/tsconfig.json",
    "lint": "eslint --ext .ts src/ .",
    "translate": "translate-adapter",
    "release": "release-script"
  },
  "bugs": {
    "url": "https://github.com/CorantGmbH/ioBroker.air-q/issues"
  },
  "readmeFilename": "README.md"
}
